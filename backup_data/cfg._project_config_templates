backup  root@vlserver:/usr/share/dokuwiki       ls/
backup  root@vlserver:/var/log          ls/
backup  root@vlserver:/usr/local/bin    ls/



[fluks_nc]
snapshot_root   /mnt/fluks/rs/nc/
retain          eins    5
retain          zwei    4
retain          drei    4
retain          vier    4
ssh_args        -p11022 -i /root/.ssh/id_rsa
#backup root@nc.rleofield.de:/bin               nc/
#backup root@nc.rleofield.de:/boot              nc/
backup  root@nc.rleofield.de:/root              nc/
backup  root@nc.rleofield.de:/etc               nc/
backup  root@nc.rleofield.de:/home              nc/
backup  root@nc.rleofield.de:/mnt               nc/
#backup root@nc.rleofield.de:/opt               nc/
#backup root@nc.rleofield.de:/usr               nc/     ssh_args=-p11022 -i /root/.ssh/id_rsa_nc
backup  root@nc.rleofield.de:/var/log           nc/
backup  root@nc.rleofield.de:/usr/local/bin     nc/



