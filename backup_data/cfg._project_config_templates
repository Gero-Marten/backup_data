####### host part #######


default: ssh_args        -p 22



[fluks_dserver]
snapshot_root /mnt/fluks/rs/dserver/
retain eins    5
retain zwei    6
retain drei    4
retain vier    3
backup root@vdserver:/etc              ds/
backup root@vdserver:/home             ds/
backup root@vdserver:/opt              ds/
backup root@vdserver:/sftp             ds/
backup root@vdserver:/var/lib/dokuwiki ds/
backup root@vdserver:/usr/share/dokuwiki       ds/
backup root@vdserver:/var/log          ds/
backup root@vdserver:/usr/local/bin    ds/


[fluks_lserver]
